{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": false,
    "composite": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": false,
    "declarationDir": "dist/types",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "bin/**/*.js"]
}
